@using System.Web.Optimization
@model FileDrop.Web.Models.FilesViewModel
@{
    ViewBag.Title = "Index";
    ViewBag.ActiveMenu = "Files";
}

@Styles.Render("~/Bundles/dropzonecss")

<h2>
    Files
    <button id="uploadFile" class="btn btn-link" data-toggle="tooltip" data-placement="top" title="Upload Files">
        <i class="fa fa-cloud-upload fa-lg"></i>
    </button>
    <button id="downloadArchive" class="btn btn-link" data-toggle="tooltip" data-placement="top" title="Download Archive" data-resourceurl="@Url.Action("DownloadArchive", "File")">
        <i class="fa fa-file-archive-o fa-lg"></i>
    </button>
</h2>
<input id="photosFilter" type="checkbox" /><label for="photosFilter">Photos</label>


<p></p>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">
            Files
            <span class="pull-right"><input id="fileSearch" placeholder="Search" value="" /></span>
        </h3>
    </div>
    <div class="panel-body">
        <div id="filesDiv" class="table-body" style="height: 400px; overflow: auto">
            @Html.Partial("_FilesTable", Model)
        </div>
    </div>
</div>

@Html.Partial("_FileUploadModal")

@section scripts
{
    @Scripts.Render("~/Bundles/dropzonejs")
    <script src="~/js/files.js"></script>
}